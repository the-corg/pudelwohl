<Window x:Class="Pudelwohl_Hotel_and_Resort_Management_Suite_Ultimate_Wuff_Wuff.View.BookingDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pudelwohl_Hotel_and_Resort_Management_Suite_Ultimate_Wuff_Wuff.View"
        xmlns:viewmodel="clr-namespace:Pudelwohl_Hotel_and_Resort_Management_Suite_Ultimate_Wuff_Wuff.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewmodel:BookingDetailsViewModel}"
        mc:Ignorable="d"
        Title="BookingDetails" Height="320" Width="280"
        FontSize="16" ResizeMode="NoResize" WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="16"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="16"/>
            <RowDefinition/>
            <RowDefinition Height="16"/>
            
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding HeaderText}" Grid.Column="1" Foreground="{StaticResource DogBrown}" FontWeight="Bold" />
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Check-In Date:" />
        <DatePicker Grid.Row="2" Grid.Column="1" SelectedDate="{Binding CheckInDate, Mode=TwoWay, Converter={StaticResource DateOnlyDateTimeConverter}}" />
        <TextBlock Grid.Row="3" Grid.Column="1"  Text="Check-Out Date:"/>
        <DatePicker Grid.Row="4" Grid.Column="1" SelectedDate="{Binding CheckOutDate, Mode=TwoWay, Converter={StaticResource DateOnlyDateTimeConverter}}" />
        <TextBlock Grid.Row="5" Grid.Column="1"  Text="Room:"/>
        <ComboBox Grid.Row="6" Grid.Column="1" SelectedItem="{Binding RoomName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding RoomNames}" />
        <Grid Grid.Row="8" Grid.Column="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Confirm" Margin="10 0" Command="{Binding ConfirmCommand}" />
            <Button Grid.Column="1" x:Name="btnCancel" Content="Cancel" Margin="10 0" Click="btnCancel_Click" />
        </Grid>
    </Grid>
</Window>
