<UserControl x:Class="Pudelwohl_Hotel_and_Resort_Management_Suite_Ultimate_Wuff_Wuff.Controls.MealSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pudelwohl_Hotel_and_Resort_Management_Suite_Ultimate_Wuff_Wuff.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer >
        <StackPanel>
            <Label Content="{Binding Meal, RelativeSource={RelativeSource AncestorType=local:MealSelectionControl}}" HorizontalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource DogBrown}"/>
            <Label Content="Option 1:" Margin="16 0 16 0"/>
            <ComboBox Margin="16 0 16 0"/>
            <Label Content="Option 2:" Margin="16 0 16 0"/>
            <ComboBox Margin="16 0 16 0"/>
            <Label Content="Option 3:" Margin="16 0 16 0"/>
            <ComboBox Margin="16 0 16 0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
