<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <RootNamespace>Pudelwohl_Hotel_and_Resort_Management_Suite_Ultimate_Wuff_Wuff</RootNamespace>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\icon.png" />
    <None Remove="Data\Bookings.csv" />
    <None Remove="Data\Daily Menus and Food IDs.csv" />
    <None Remove="Data\Dogs and Menu Options.csv" />
    <None Remove="Data\Dogs and Services.csv" />
    <None Remove="Data\Dogs.csv" />
    <None Remove="Data\Meal Options.csv" />
    <None Remove="Data\Rooms.csv" />
    <None Remove="Data\Services.csv" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Data\DataFiles\Bookings.csv">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Data\DataFiles\Daily Menus and Food IDs.csv">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Data\DataFiles\Dogs and Menu Options.csv">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Data\DataFiles\Dogs and Services.csv">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Data\DataFiles\Dogs.csv">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Data\DataFiles\Meal Options.csv">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Data\DataFiles\Rooms.csv">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Data\DataFiles\Services.csv">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\icon.png" />
  </ItemGroup>

</Project>
